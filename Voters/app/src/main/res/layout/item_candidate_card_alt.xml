<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="#ecf0f1"
    android:layout_marginLeft="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_candidate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_candidate"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_user"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:shapeAppearanceOverlay="@style/circular"
            android:padding="3dp"
            app:strokeWidth="3dp"
            app:strokeColor="#7f8c8d"/>
        <TextView
            android:id="@+id/tv_candidate_name"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="CANDIDATE NAME"
            android:maxLines="1"
            android:maxLength="26"
            android:gravity="center|start"
            android:fontFamily="@font/poppins"
            app:layout_constraintLeft_toRightOf="@id/img_candidate"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_candidate_party"/>

        <TextView
            android:id="@+id/tv_candidate_party"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="CANDIDATE PARTY"
            android:maxLines="1"
            android:maxLength="26"
            android:gravity="center|start"
            android:fontFamily="@font/poppins"
            app:layout_constraintLeft_toRightOf="@id/img_candidate"
            app:layout_constraintTop_toBottomOf="@id/tv_candidate_name"
            app:layout_constraintBottom_toTopOf="@+id/tv_candidate_position"/>

        <TextView
            android:id="@+id/tv_candidate_position"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="CANDIDATE POSITION"
            android:maxLines="1"
            android:maxLength="26"
            android:gravity="center|start"
            android:fontFamily="@font/poppins"
            app:layout_constraintLeft_toRightOf="@id/img_candidate"
            app:layout_constraintTop_toBottomOf="@id/tv_candidate_party"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>