<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.CandidateProfileFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_candidate"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tb_candidate_info"
        android:src="@drawable/ic_user"
        app:shapeAppearanceOverlay="@style/circular"
        android:padding="4dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/black"/>
    <TextView
        android:id="@+id/tv_candidate_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/img_candidate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="CANDIDATE NAME"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        />

        <TableLayout
            android:id="@+id/tb_candidate_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/img_candidate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:text="Position"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/tv_position"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins"
                    android:text=""
                    android:textSize="20sp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:text="Party"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/tv_party"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:fontFamily="@font/poppins"
                    android:textSize="20sp"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:text="Province"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/tv_province"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:fontFamily="@font/poppins"
                    android:textSize="20sp"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:text="Municipality"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/tv_municipality"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:fontFamily="@font/poppins"
                    android:textSize="20sp"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:text="District"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/tv_district"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:fontFamily="@font/poppins"
                    android:textSize="20sp"/>
            </TableRow>



    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>